<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInsurance">

    <TextView
        android:id="@+id/txtAddVehicleInsuranceFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAddInsurance"
        android:textColor="@color/mainButtonFont"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"/>

    <EditText
        android:id="@+id/inputCurrentInsuranceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Insuranced Date"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddVehicleInsuranceFormTitle" />

    <EditText
        android:id="@+id/inputNextInsuranceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Insurance Expire Date"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCurrentInsuranceDate" />

    <Button
        android:id="@+id/btnAddInsuranceRecord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/mainButton"
        android:text="SUBMIT"
        android:textColor="@color/mainButtonFont"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/inputNextInsuranceDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>